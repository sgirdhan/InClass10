<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sharangirdhani.inclass10.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/editLoginEmail"
        android:layout_marginTop="37dp"
        android:id="@+id/editLoginPassword"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_alignStart="@+id/editLoginEmail"
        android:layout_alignEnd="@+id/editLoginEmail" />

    <EditText
        android:id="@+id/editLoginEmail"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editLoginPassword"
        android:layout_marginBottom="81dp"
        android:onClick="doLogin"
        android:text="Login" />

    <Button
        android:id="@+id/buttonCreate"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonLogin"
        android:layout_alignBottom="@+id/buttonLogin"
        android:layout_alignEnd="@+id/editLoginPassword"
        android:text="Sign Up" />

</RelativeLayout>
